<meta charset="utf-8">
<title>Assignment 1</title>

<script language="javascript" type="text/javascript">
function footwear() {
    var weather = document.getElementById("weather").value;
  if (weather == hot) {
    message = "Wear sandals today!";
  } else if (weather == rain) {
    message = "Wear galoshes today!";
  } else if (weather == snow) {
    message = "Wear boots today!";
  } else {
      footwear == "Wear tennis shoes today!";
  }
  document.getElementById("shoes").innerHTML = message;
}
</script>
</head>
<body>
<h2>Foot wear you should wear for today:</h2><br>
<p>What type of weather are you having? Hot, rain, snow, or other?</p>
<input type="text" id="weather">

<button onclick="footwear()">Foot Wear</button>
<div id="shoes"></div>
<p id="output"></p>

</body>
</html>


<!DOCTYPE HTML>
<html lang="en-us">
<head>
<meta charset="utf-8">
<title>Assignment 2</title>

<script language="javascript" type="text/javascript">
function mathSkills() {
    let numberOne = parseFloat(document.getElementById("number1").value);
    let operator = document.getElementById("operator").value;
    let numberTwo = parseInt(document.getElementById("numberTwo).value);
    let results = parseFloat(document.getElementById("results").value);
    if (operator == "+") {
        if (results == numberOne + numberTwo) {
          message = "You did it!";
        }
        else {
          message = "Almost, try again."
        }}
    if (operator == "-") {
        if (results == numberOne - numberTwo) {
          message = "You did it!";
        }
        else {
          message = "Almost, try again."
        }}
    } else if (operator == "*") {
            if (results == numberOne * numberTwo) {
              message = "You did it!"
            }
            else {
              message = "Almost, try again."
            }}
        } else if (operator = /) {
                if (results == numberOne / numberTwo) {
                  message = "You did it!"
                }
                else {
                  message = "Almost, try again."
                }}

            document.getElementById("mathSkillsResults").innerHTML = message;
}
</script>
</head>
<body>
<h2>Test Your Math Skills!</h2>

<input type="text" id="numberOne">
<input type="text" id="operator" value="+">
<input type="text" id="numberTwo">
<p>=</p>
<input type="text" id="results">

<button onclick="mathSkills()">Check</button>
<div id="mathSkillsResults"></div>
</body>
</html>