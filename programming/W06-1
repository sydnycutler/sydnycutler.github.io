<script language="javascript" type="text/javascript">
function mathSkills() {
    let numberOne = parseInt (document.getElementById("numberBox).value);
    let numberTwo = parseInt (document.getElementById("otherNumberBox).value);
    let results = numberOne + numberTwo;
    if (operator = -) {
        let results = numberOne - numberTwo
    } else if (operator = *) {
            let results = numberOne * numberTwo
        } else if (operator = /) {
                let results = numberOne / numberTwo
            }
            document.getElementById("output").innerHTML = operator;
}

