<body>
<h2>Foot wear you should wear for today:</h2><br>
<p>Hot, rain, snow, or other?</p>
<input type="text" id="weather" value="Temperature...">

<button onclick="myFunction()">Foot Wear</button>

<p id="output"></p>

<script language="javascript" type="text/javascript">
function myFunction() {
    var footwear;
    var weather = new Footwear().getWeather();
  if (weather = hot) {
    footwear = "Wear sandals today!";
  } else if (weather = rain) {
    footwear = "Wear galoshes today!";
  } else if (weather = snow) {
    footwear = "Wear boots today!";
  } else {
      footwear = "Wear tennis shoes today!";
  }
  document.getElementById("output").innerHTML = footwear;
}

</script>
</body>
